{
  "name": "@cicada-lang/explicit-substitution",
  "version": "0.3.0",
  "repository": "github:cicada-lang/explicit-substitution",
  "type": "module",
  "main": "./lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "bin": {
    "explicit-substitution": "bin/explicit-substitution.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test:node": "node --test",
    "test:lang:tests": "test-runner snapshot './bin/explicit-substitution.js run' 'docs/lang/**/*.scm' --exclude 'docs/lang/**/*.error.scm'",
    "test:lang:tests-error": "test-runner snapshot-error './bin/explicit-substitution.js run' 'docs/lang/**/*.error.scm'",
    "test:lang": "npm run test:lang:tests && npm run test:lang:tests-error",
    "test": "npm run test:node && npm run test:lang",
    "format": "prettier src docs --write"
  },
  "dependencies": {
    "@cicada-lang/framework": "^0.2.0",
    "@xieyuheng/command-line": "^0.1.2",
    "@xieyuheng/ty": "^0.2.1",
    "dedent": "^1.5.3",
    "regexp-match-indices": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "@xieyuheng/test-runner": "^0.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^5.5.4"
  },
  "license": "GPL-3.0-or-later"
}
